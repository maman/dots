! ----------------------------------------------------------------------------
! file:     ~/.Xdefaults
! author:   Achmad Mahardi - http://mahardi.heroku.com
! vim:enc=utf-8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ----------------------------------------------------------------------------

*customization: 	-color

XTerm*termName:		xterm-256color
!XTerm*font:     	-*-terminus-*-*-*-*-12-*-*-*-*-*-*-*
!XTerm*boldFont:  	-*-terminus-*-*-*-*-12-*-*-*-*-*-*-*
!XTerm*font:     	-*-montecarlo-medium-*-*-*-11-*-*-*-*-*-*-*
!XTerm*boldFont:  	-*-montecarlo-medium-*-*-*-11-*-*-*-*-*-*-*
XTerm*font:     	-*-lime-*-*-*-*-10-*-*-*-*-*-*-*
XTerm*boldFont:  	-*-lime-*-*-*-*-10-*-*-*-*-*-*-*
XTerm.vt100.boldMode: 	false
XTerm*geometry: 	80x30
XTerm*dynamiccolors: 	true
XTerm.vt100.utf8:             1
XTerm*loginShell: 	true
XTerm*charClass: 	33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48,35:48,58:48,63:48,61:48,44:48,38:48,59:48
XTerm*jumpScroll: 	true
XTerm*multiScroll: 	true
XTerm*saveLines: 	512
XTerm*cursorColor:      #fd971f

URxvt*termName:          rxvt-unicode-256color
!URxvt*font:             -*-neep-medium-*-*-*-10-*-*-*-*-*-*-*
!URxvt*boldFont:         -*-neep-medium-*-*-*-10-*-*-*-*-*-*-*
URxvt*font:              xft:Pragmata:pixelsize=9:antialias=false
URxvt*boldFont:          xft:Pragmata:pixelsize=9:antialias=false
!URxvt*font:              xft:Meslo LG M:pixelsize=9:antialias=false
!URxvt*boldFont:          xft:Meslo LG M:pixelsize=9:antialias=false
URxvt.scrollBar:         false
URxvt.imLocale:          en_US.UTF-8
URxvt.saveLines:         512
URxvt.geometry:          95x20
URxvt.boldMode:          false
URxvt.inheritPixmap:     false
URxvt.jumpScroll:        true
URxvt.perl-ext-common:	 default,matcher
URxvt.urlLauncher:		 firefox
Urxvt*keysym.Home:		 \033[1~
Urxvt*keysym.End:		 \033[4~
Urxvt.tabbed.tabbar-bg:	 7
Urxvt.tabbed.tabbar-fg:	 0
Urxvt.tabbed.tab-bg:	 5
Urxvt.tabbed.tab-fg:	 0
URxvt.matcher.button:    1
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]
URxvt.internalBorder:    5
URxvt.colorBD:           #ffffff
URxvt.colorIT:           #bbbbbb
URxvt.colorUL:           #999999
URxvt.underlineColor:    #999999
URxvt.borderless:        true
URxvt*cursorColor:       #fd971f

!#include "/home/fake/.colors/choco.colors"
#include "/home/fake/.colors/dotshare.colors"
#include "/home/fake/.colors/urxvt.fix"

!*background: 			 #151515
!*foreground: 			 #f7f8f2

alsamixer*scrollBar:  false

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.dpi: 96
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.rgba: rgb

!dmenu.font:             Xft:Meslo LG M:pixelsize=8
dmenu.foreground:       #dddddd
dmenu.background:       #151515
dmenu.selforeground:    #dddddd
dmenu.selbackground:    #6d9cbe
